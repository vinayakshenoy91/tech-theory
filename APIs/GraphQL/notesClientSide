Query in playground:
---------------------
{
    me{
        email
    }
}

query AllCharacters($page:Int){
    character(page:$page){
        email
    }
}


//aliasing:
query AllCharacters($page:Int){
    result: character(page:$page){
        fullemail:email
    }
}


